@using CourseAcademyProject.ViewModels
@{
    Layout = "~/Views/Panel/_PanelLayout.cshtml";
    ViewData["Title"] = "Edit category";
}
@model CategoryViewModel
<main class="content px-3 py-2">
    <div class="mb-3">
        <h4>Edit category</h4>
    </div>
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-controller="Panel" class="text-decoration-none">
                        Course elements
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Categories" asp-controller="Category" class="text-decoration-none">Categories</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Edit category
                </li>
            </ol>
        </nav>
    </div>
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div class="well mt-5">
                    <form asp-action="EditCategory" asp-controller="Category" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="File" class="control-label"></label>
                            @if (Model.Image != null)
                            {
                                <div class="category-img col-sm-3">
                                    <img src="@Model.Image" alt="@Model.Name" class="img-responsive">
                                </div>
                            }
                            <input type="file" class="form-control" asp-for="File" accept="image/*" />
                        </div>
                        <br />
                        <div class="form-group">
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@await Html.PartialAsync("_ValidationScriptsPartial")