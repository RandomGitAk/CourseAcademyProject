@using CourseAcademyProject.ViewModels
@{
    Layout = "_PanelLayout.cshtml";
    ViewData["Title"] = Model.Id is null ? "Adding a user" : "Editing a user";
}

@model CreateOrUpdateUserViewModel

<main class="content px-3 py-2">
    <div class="mb-3">
        <h4>@(Model.Id is null ? "Adding a user" : "Editing a user")</h4>
    </div>
<div class="col">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Panel" class="text-decoration-none">Courses</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Users" asp-controller="Panel" class="text-decoration-none">Users</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                 @(Model.Id is null ? "Adding a user" : "Editing a user")
            </li>
        </ol>
    </nav>
</div>
<div class="container">

<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="well mt-5">
            <form method="post" asp-controller="Panel" asp-action="CreateOrUpdateUser">
                <div asp-validation-summary="ModelOnly"></div>

                @if (Model.Id is not null)
                {
                    <input asp-for="Id" type="hidden" />
                }

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                @if (Model.Id is null)
                {
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PasswordConfirm" class="control-label"></label>
                        <input asp-for="PasswordConfirm" class="form-control" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <input asp-for="Password" type="hidden" value="Update12!s##8)" />
                    <input asp-for="PasswordConfirm" type="hidden" value="Update12!s##8)" />
                }

                <div class="mt-3"></div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
</div>
</main>

@await Html.PartialAsync("_ValidationScriptsPartial")
