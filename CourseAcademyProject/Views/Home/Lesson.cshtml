@{
    ViewData["Title"] = "Lesson";
}
@model Lesson

<section class="pt-5 container mb-3">
        <div class="row pt-4">
          <div class="col">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-controller="Home" class="text-decoration-none">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Courses" asp-controller="Home" class="text-decoration-none">Courses</a>
                </li>
                <li class="breadcrumb-item">
                  <a asp-action="CourseDetail" asp-controller="Home" class="text-decoration-none">Course Details</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Lesson
                </li>
              </ol>
            </nav>
          </div>
          <div class="py-3 pe-lg-4 bg-white">
            <div class="row">
              <div class="col-lg-9">
                <div class="ratio ratio-16x9">
                  <iframe
                    width="560"
                    height="315"
                    src="@Model.VideoUrl"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen
                  ></iframe>
                </div>
              </div>
              <div class="col-lg-3 mt-3 mt-lg-0 bg-light">
                <h1 class="h3 text-center">@Model.Title</h1>
                <p class="fst-italic mt-4">Additional information</p>
                <p>
                 @Model.Information
                </p>
              </div>

              <div class="col-lg-9">
                <hr class="mt-3" />
                <p>@Model.DateOfPublication by admin@gmail.com</p>
               <article class="outline ps-3">
                 @Html.Raw(@Model.LessonContent)    
                </article>
                <hr class="my-3" />
              </div>

                @await Component.InvokeAsync("RightPartLessonsLinks", new { courseId = Model.CourseId, lessonId = Model.Id})

                @await Component.InvokeAsync("BottomLessonNavigation", new { courseId = Model.CourseId, lessonId = Model.Id })
            </div>
          </div>
        </div>
      </section>
@await Html.PartialAsync("_FooterPartial")
      
