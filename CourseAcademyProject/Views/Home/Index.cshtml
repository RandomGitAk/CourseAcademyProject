@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
    <link href="~/assets/css/carousel.css" rel="stylesheet" />
}

    <div class="container-fluid mt-lg-2">
    <div id="myCarousel"
         class="carousel slide carousel-fade mb-5"
         data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button"
                    data-bs-target="#myCarousel"
                    data-bs-slide-to="0"
                    class="active"
                    aria-current="true"
                    aria-label="Slide 1"></button>
            <button type="button"
                    data-bs-target="#myCarousel"
                    data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button"
                    data-bs-target="#myCarousel"
                    data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="assets/img/slider/first.png"
                     class="d-block w-100" alt="..." style="object-fit: cover; max-height: 100%; max-width: 100%;" />

                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>Explore Endless Possibilities</h1>
                        <p>
                            Unleash your potential with Course Academy's coding courses.
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="assets/img/slider/second.jpg"
                     class="d-block w-100" alt="..." style="object-fit: cover; max-height: 100%; max-width: 100%;" />
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Embark on a Coding Adventure</h1>
                        <p>
                            Discover, learn, and grow with Course Academy as your guide.
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="assets/img/slider/third.png"
                     class="d-block w-100" alt="..." style="object-fit: cover; max-height: 100%; max-width: 100%;" />
                <div class="container">
                    <div class="carousel-caption text-end">
                        <h1>Unlock the Power of Programming</h1>
                        <p>
                            Transform your passion into expertise with Course Academy's comprehensive courses.
                        </p>
                        <p>
                            @* <a class="btn btn-lg btn-primary" href="#">Browse gallery</a> *@
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev"
                type="button"
                data-bs-target="#myCarousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next"
                type="button"
                data-bs-target="#myCarousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

  
    </div>

<!-- For Mobile-->
 <div class="mobile-img py-4">
    <img src="~/assets/img/slider/first.png" class="img-fluid" alt="..." style="height: 200px; max-width: 100%;">
</div>


    <!-- Top categories messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container top-category mt-lg-4">
        <!-- Three columns of text below the carousel -->
        <div class="row gy-3">
            <div class="col-lg-4 col-sm-6 d-flex flex-column">
                <i class="fa-solid fa-pen-ruler fa-3x"></i>
            <h2 class="mt-3">Simplicity</h2>
                <p>
                Learning any programming language or technology starts with the simplest concepts. If you are a beginner, choose courses at the Beginner level.
                </p>
            </div>
            <!-- /.col-lg-4 -->
            <div class="col-lg-4 col-sm-6 d-flex flex-column">
                <i class="fa-brands fa-dev fa-3x"></i>
            <h2 class="mt-3">Convenience</h2>
                <p>
                The site contains video tutorials, tasks, simulators, tests, articles, and webinars - everything you need for high-quality system IT training.
                </p>

            </div>
            <!-- /.col-lg-4 -->
            <div class="col-lg-4 col-sm-6 d-flex flex-column">
                <i class="fa-solid fa-code fa-3x"></i>

            <h2 class="mt-3">Quality</h2>
                <p>
                Video courses and all additional services are developed by experienced professionals and meet the highest quality standards.
                </p>
            </div>
            <!-- /.col-lg-4 -->
        </div>
        <!-- /.row -->

        <hr />
    </div>
    <!-- /.container -->
    <!-- About learning
    ================================================== -->
    <div class="container about-learning mt-lg-4 mb-3">
        <div class="mb-3 bg-light rounded-3">
            <div class="container-fluid py-3">
                <h1 class="display-5 fw-bold text-center">How is the training</h1>
                <div class="container mt-3">
                    <ul class="nav nav-tabs" id="learningProcesTabs">
                        <li class="nav-item">
                            <a class="nav-link active"
                               id="tab1-tab"
                               data-bs-toggle="tab"
                               href="#tab1">Video & Compendium</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               id="tab2-tab"
                               data-bs-toggle="tab"
                               href="#tab2">Practical tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               id="tab3-tab"
                               data-bs-toggle="tab"
                               href="#tab3">Testing</a>
                        </li>
                    </ul>

                    <div class="tab-content my-3">
                        <div class="tab-pane fade show active" id="tab1">
                            <h3 class="text-center">Video & Compendium</h3>
                            <p class="text-center">
                                Watch the video lessons and repeat all the practical tasks
                                that the teacher shows. For greater convenience, a synopsis
                                of the lesson materials is provided.
                            </p>
                            <img src="assets/img/tabs/video.JPG"
                                 class="img-fluid"
                                 alt="video.JPG" />
                        </div>
                        <div class="tab-pane fade" id="tab2">
                            <h3 class="text-center">Practical tasks</h3>
                            <p class="text-center">
                                Complete practical tasks for each lesson! Without practice,
                                there will be no progress. Tasks are described in the
                                package of documents for the lesson.
                            </p>
                            <img src="assets/img/tabs/Practice.JPG"
                                 class="img-fluid"
                                 alt="Practice.JPG" />
                        </div>
                        <div class="tab-pane fade" id="tab3">
                            <h3 class="text-center">Testing</h3>
                            <p class="text-center">
                                After each lesson, check whether you have fully mastered the
                                material - take post-lesson tests on TestProvider, and if
                                there are gaps in your knowledge, watch the relevant topics
                                of the video lesson again.
                            </p>
                            <img src="assets/img/tabs/Testing.PNG"
                                 class="img-fluid"
                                 alt="Testing.PNG" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
    </div>

    <!-- News
    ================================================== -->
    @await Component.InvokeAsync("BlogNews")

  @await Html.PartialAsync("_FooterPartial")

